<Window x:Class="SpaceBattle.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Menu" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Content of the main menu -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Play" Click="PlayButton_Click" Margin="5" />
            <Button Content="Options" Click="OptionsButton_Click" Margin="5" />
            <Button Content="Exit" Click="ExitButton_Click" Margin="5" />
        </StackPanel>
        
        <!-- Footer with credits or additional information -->
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
            Created by Your Name
        </TextBlock>
    </Grid>
</Window>